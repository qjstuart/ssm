<html>

    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>

    <body>
        <div class="container">

            <h1 class="display-1">Create Encryption Keys</h1>

            <form action="/admin/createapplicationkey" method="POST">

                <div class="form-group">
                    <label for="name">Application Key Name</label>
                    <input type="text" class="form-control" id="name" name="name" aria-describedby="name_help" placeholder="e.g. Facebook">
                </div>

                <div class="row form-group m-2 justify-content-between">

                <div class="dropdown">
                    <label for="algorithm">Algorithm</label>
                    <select name="algorithm" id="algorithm">
                        <option value="aes">AES</option>
                        <option value="des">DES</option>
                        <option value="3des">3DES</option>
                    </select>
                </div>

                <div class="dropdown">
                        <label for="mode_dropdown">Mode</label>
                        <select name="mode" id="mode">
                            <option value="ecb">ECB</option>
                            <option value="cbc">CBC</option>
                        </select>
                    </div>
                </div>

                <div class="row justify-content-between m-2">
                    <div class="col-xs-3 ">
                        <div class="input-group number-spinner">
                            <label for="padding">Padding</label>
                            <select name="padding" id="padding">
                                <option value="PKCS">PKCS</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-3 ">
                        <div class="input-group number-spinner">
                            <label for="padding_input">Encryption Lifetime</label>
                            <input type="number" class="form-control text-center ml-2" value="1" id="padding_input">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="MK_adminA">Master Key 1</label>
                    <input type="text" class="form-control" id="MK_adminA" aria-describedby="MK_adminA_help" placeholder="Enter admin A master key">
                </div>

                <div class="form-group">
                    <label for="MK_adminB">Master Key 2</label>
                    <input type="text" class="form-control" id="MK_adminB" aria-describedby="MK_adminB_help" placeholder="Enter admin B master key">
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="autorotate" name="autorotate">
                  <label class="form-check-label" for="exampleCheck1">Autorotate</label>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>        
        </div>
       
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>        
    </body>
</html>