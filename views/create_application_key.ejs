<h1>Create Application Key</h1>
<form action="/admin/createapplicationkey" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>
    </div>

    <div>
        <label for="algorithm">Algorithm</label>
        <select name="algorithm" id="algorithm">
            <option value="aes">AES</option>
            <option value="des-ede3">3DES (3-key)</option>
            <option value="des-ede">3DES (2-key)</option>
            <option value="des">DES</option>
        </select>
    </div>

    <div>
        <label for="mode">Mode</label>
        <select name="mode" id="mode">
            <option value="gcm">GCM (AES only)</option>
            <option value="ctr">CTR (AES only)</option>
            <option value="cbc">CBC</option>
            <option value="cfb">CFB</option>
            <option value="cfb1">CFB-1</option>
            <option value="cfb8">CFB-8</option>
            <option value="ofb">OFB</option>
            <option value="ecb">ECB</option>
        </select>
    </div>

    <div>
        <label for="lifetime">Lifetime (days)</label>
        <input type="number" id="lifetime" name="lifetime" step="1">
    </div>

    <div>
        <label for="name">Master key 1</label>
        <input type="text" id="MK_adminA" name="MK_adminA" required>
    </div>

    <div>
        <label for="name">Master key 2</label>
        <input type="text" id="MK_adminB" name="MK_adminB" required>
    </div>

    <div>
        <label for="keysize">Key size (bits)</label>
        <select name="keysize" id="keysize">
            <option value="64">64 (DES)</option>
            <option value="128">128 (3DES/AES)</option>
            <option value="192">192 (3DES/AES)</option>
            <option value="256">256 (AES)</option>
        </select>

    <div>
    
    <div>
        <label for="padding">Padding</label>
        <select name="padding" id="padding">
            <option value="PKCS">PKCS</option>
        </select>
    </div>

    <div>
        <label for="autorotate">Autorotate</label>
        <input type="checkbox" id="autorotate" name="autorotate" value="true">
    </div>
    
    <button type="submit">Submit</button>
</form>

